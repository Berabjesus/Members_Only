<div class="row d-flex flex-column text-white px-4 theme-bg">
  <div class="border-bottom border-light pb-4">
    <%= render partial: 'form' if @signed_in %>
  </div>
  <h1>Rumors</h1>
  <div>
    <% @posts.each do |post|%>
      <section class="card theme-bg py-2 my-2 border border-light px-3">
        <div class="card-title d-flex flex-column ">
          <h2><%= @signed_in? post.user.name : "Anonymous"%></h2>
          <div class="d-flex">
            <h5>Title: <%= post.title %></h5>
          </div>
          <div>
            <span class="ml-auto"><%= distance_of_time_in_words(Time.now, post.created_at ) %> ago</span>
          </div>
        </div>
        <div class="card-body d-flex">
          <%= image_tag "logo.png", class:'img-fluid logo'%>
          <%= post.content%>
        </div>
      </section>
    <%end%>
  </div>
</div>